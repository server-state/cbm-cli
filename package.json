    "@types/yargs": "^15.0.5",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "debug": "^4.1.1",
